{% extends "base.html.twig" %}

{% block title %}
    Modifier album
{% endblock %}

{% block body %}
    <h1>Modifier un album</h1>

    {{form_start(formview)}}
    {{form_errors(formview)}}

    {{form_row(formview.name)}}
    {{form_row(formview.img)}}
    {{form_row(formview.category)}}

    <button class="btn btn-primary">
        <i class="fas fa-save">Modifier</i>   
    </button>

    {{form_end(formview)}}
{% endblock %}