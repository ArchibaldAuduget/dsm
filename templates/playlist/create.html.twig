{% extends 'base.html.twig' %}

{% block title %}Créer nouvelle playlist{% endblock %}

{% block body %}
    <h1>Créer playlist</h1>

    {{form_start(formview)}}
    {{form_errors(formview)}}

    <div class="row">
        <div class="col">
            {{form_row(formview.name)}}
        </div>
    </div>

    <button class="btn btn-primary">
        <i class="fas fa-save"> Créer la playlist</i>   
    </button>
    {{ form_rest(formview) }}
    {{form_end(formview)}}
{% endblock %}
